generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id           Int      @id @default(autoincrement())
  recordId     String   @unique
  projectName  String
  registry     String
  vintage      Int
  quantity     Int
  serialNumber String?  @unique
  createdAt    DateTime @default(now())
  
  // Relation to Event
  events       Event[]  // a record can have multiple events
  
  // Indexes for faster queries on frequently filtered fields
  @@index([projectName])
  @@index([registry])
  @@index([vintage])
}

model Event {
  id          Int      @id @default(autoincrement())
  eventId     String   @unique
  recordId    String
  type        String
  description String?
  createdAt   DateTime @default(now())

  // Relation to Record
  record      Record   @relation(fields: [recordId], references: [recordId])

  @@index([recordId]) // optimization for querying by record
}
